<script type="text/javascript">
    google.charts.load("current", { packages: ["corechart"] });
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {
        const chartData = google.visualization.arrayToDataTable([
            ['Kategoria', 'Wartość', { role: 'annotation' }],
            ['Przychody', {{ incomeSum[0].incomeSum }}, '{{ incomeSum[0].incomeSum }}'],
            ['Wydatki', {{ expenseSum[0].expenseSum }}, '{{ expenseSum[0].expenseSum }}']
        ]);

        const chartOptions = {
                legend: {
                    position: 'top',
                    alignment: 'center'
                },
                is3D: true,
                pieSliceText: 'value',
                hAxis: {
                    textPosition: 'none'
                },
                backgroundColor: 'transparent'
            };

    const chart = new google.visualization.PieChart(document.getElementById('chart'));
    chart.draw(chartData, chartOptions);
    }
</script>
